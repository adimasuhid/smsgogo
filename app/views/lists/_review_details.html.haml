= simple_form_for @list, url: lists_path, method: :post do |f|
  = f.input :csv_url, label: "Uploaded File"
  = f.input :name, label: "List Name"
  = f.input :opt_in_kw, label: "Opt-in Keyword"
  = f.input :opt_in_confirmation, as: :text, label: "Opt-in Confirmation Message", :input_html => {:rows => 3}
  = f.input :opt_out_kw, label: "Opt-out Keyword"
  = f.input :opt_out_confirmation, as: :text, label: "Opt-out Confirmation Message", :input_html => {:rows => 3}
  = f.input :opt_error, as: :text, label: "Opt-out Error Message", :input_html => {:rows => 3}
  = f.submit "Save", class: "btn btn-success"
